FROM docker.io/golang:alpine as builder
RUN apk update && apk add --no-cache git
WORKDIR /src
COPY /src/go.mod .
COPY /src/go.sum .
RUN go mod download
COPY /src/. .
RUN CGO_ENABLED=0 GOOS=linux go build -o ./server/mqd-client .

FROM docker.io/alpine
WORKDIR /usr/
COPY --from=builder /src/server .
EXPOSE 8080
EXPOSE 8081
CMD ./mqd-client
